<% title @start_player_card.name %>

<div id="start_player_card">

  <h2><%=h @start_player_card.name %></h2>
  
  <p>
    <b>Arrow:</b>
    <%=h @start_player_card.card_type %>&deg;
  </p>

  <p>
    <b>Number:</b>
    <%=h @start_player_card.cost %>
  </p>

  <p>
    <b>Card text:</b>
    <%=h @start_player_card.card_text %>
  </p>

  <ul>
    <li class="grayButton flip"><%= link_to "Pick again", start_player_card_path( :random ) %></li>
  </ul>
</div>