<h1>Editing card</h1>

<% form_for(@card) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :game %><br />
    <%= f.text_field :game %>
  </p>
  <p>
    <%= f.label :expansion %><br />
    <%= f.text_field :expansion %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :card_type %><br />
    <%= f.text_field :card_type %>
  </p>
  <p>
    <%= f.label :cost %><br />
    <%= f.text_field :cost %>
  </p>
  <p>
    <%= f.label :card_text %><br />
    <%= f.text_area :card_text %>
  </p>
  <p>
    <b>Creator:</b>
    <%=h @card.creator.username %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', card_path( @card ) %> |
<%= link_to 'Back to cards', cards_path %>