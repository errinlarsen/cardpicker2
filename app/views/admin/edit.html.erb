<% content_for :extra_items do %>
    / <%= link_to 'show this user', admin_path( @user ) %>
    / <%= link_to 'reset password', reset_admin_path( @user ) %>
<% end %>

<h1>Editing user</h1>

<% form_for( @user, :url => { :action => :update } )do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :role %><br />
    <%= f.collection_select :role, User::ROLES, :to_s, :humanize %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>