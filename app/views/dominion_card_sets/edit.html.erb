<h1>Editing Dominion card set</h1>

<% form_for([:dominion, @dominion_card_set]) do |f| %>
    <%= f.error_messages %>

    <% if can? :manage, @dominion_card_set %>
        <p>
          <%= f.label :game %><br />
          <%= f.text_field :game %>
        </p>
        <p>
          <%= f.check_box :custom %>
          <%= f.label :custom %><br />
        </p>
    <% end %>

    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :set_type %><br />
      <%= f.text_field :set_type %>
    </p>
    <p>
      <%= f.label :comments %><br />
      <%= f.text_area :comments %>
    </p>
    <p>
      <b>Creator:</b>
      <%=h @dominion_card_set.creator.username %>
    </p>
    <p>
      <b>Cards:</b>
      <%= check_boxes_for_card_set( @dominion_card_set ) %>
    <p>
      <%= f.submit 'Update' %>
    </p>
<% end %>

<%= link_to 'Show this set', dominion_card_set_path(@dominion_card_set) %> |
<%= link_to 'Back to Dominion card sets', dominion_card_sets_path %>