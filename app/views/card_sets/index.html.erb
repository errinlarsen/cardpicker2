<h1>Listing card sets</h1>

<table>
  <tr>
    <th>Game</th>
    <th>Name</th>
    <th>Set type</th>
    <th>Custom?</th>
  </tr>

  <% @card_sets.each do |card_set| %>
      <tr>
        <td><%=h card_set.game %></td>
        <td><%=h card_set.name %></td>
        <td><%=h card_set.set_type %></td>
        <td><%=h card_set.show_custom %></td>
        <td><%= link_to 'Show', card_set_path( card_set ) %></td>

        <% if can? :edit, card_set %>
            <td><%= link_to 'Edit', edit_card_set_path( card_set ) %></td>
        <% end %>

        <% if can? :destroy, card_set %>
            <td><%= link_to 'Destroy', card_set_path( card_set ), :confirm => 'Are you sure?', :method => :delete %></td>
        <% end %>
      </tr>
  <% end %>
</table>

<br />

<% if can? :create, CardSet %>
    <%= link_to 'New card set', new_card_set_path %>
<% end %>