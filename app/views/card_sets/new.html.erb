<h1>New card set</h1>

<% form_for(@card_set) do |f| %>
  <%= f.error_messages %>

  <%= hidden_field_tag "card_set[game]", @game %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :set_type %><br />
    <%= f.text_field :set_type %>
  </p>
  <p>
    <%= f.label :comments %><br />
    <%= f.text_area :comments %>
  </p>
  <p>
    <b>Cards:</b>
    <table>
      <tr><th>include?</th><th>Game</th><th>Expansion</th><th>Name</th></tr>
    <% for card in Card.all( :order => "game, expansion, name") %>
      <tr>
        <% if @game == 'dominion' %>
          <td><%= check_box_tag "card_set[card_ids][]", card.id, @random_set[:cards].include?(card.id) %></td>
        <% else %>
          <td><%= check_box_tag "card_set[card_ids][]", card.id, @card_set.cards.include?(card) %></td>
        <% end %>
        <td><%=h card.game%></td><td><%=h card.expansion %></td><td><%=link_to card.name, card %></td>
      </tr>
    <% end %>
    </table>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back to sets', card_sets_path %>