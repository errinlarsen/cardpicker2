<h1>New card set</h1>

<% form_for(@card_set) do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :game %><br />
      <%= f.text_field :game %>
    </p>
    <p>
      <%= f.check_box :custom %>
      <%= f.label :custom %><br />
    </p>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :set_type %><br />
      <%= f.text_field :set_type %>
    </p>
    <p>
      <%= f.label :comments %><br />
      <%= f.text_area :comments %>
    </p>

    <b>Cards:</b>
    <%= check_boxes_for_card_set( @card_set ) %>
    <p>
      <%= f.submit 'Create' %>
    </p>
<% end %>

<%= link_to 'Back to sets', card_sets_path %>