<h1>New Start Player card set</h1>

<% form_for(@start_player_card_set) do |f| %>
    <%= f.error_messages %>

    <% if can? :manage, CardSet %>
        <p>
          <%= f.label :game %><br />
          <%= f.text_field :game %>
        </p>
        <p>
          <%= check_box_tag "card_set[custom]", 'yes', @start_player_card_set.custom %>
          <%= f.label :custom %><br />
        </p>

    <% else %>
        <%= hidden_field_tag "card_set[game]", @start_player_card_set.game %>
        <%= hidden_field_tag "card_set[custom]", @start_player_card_set.custom %>

    <% end %>

    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :set_type %><br />
      <%= f.text_field :set_type %>
    </p>
    <p>
      <%= f.label :comments %><br />
      <%= f.text_area :comments %>
    </p>
    <b>Cards:</b>
      <%= check_boxes_for_card_set( @start_player_card_set ) %>
    <p>
      <%= f.submit 'Create' %>
    </p>
<% end %>

<%= link_to 'Back to Start Player card sets', start_player_card_sets_path %>